<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="e.tux.ifruit">
    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/alface_icon"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".UserConfig"
            android:label="Configurações de Usuário"
            android:parentActivityName=".MainActivity"/>
        <activity
            android:name=".TelaRelatorios"
            android:label="Relatório"
            android:parentActivityName=".MainActivity"/>
        <activity
            android:name=".DetalheTransacao"
            android:label="Detalhes da Transação"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".Vendas"
            android:label="Vendas Realizadas"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".Compras"
            android:label="Compras Realizadas"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".AdicionarCarrinho"
            android:label="Adicionar produto ao carrinho"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".Carrinho"
            android:label="Meu carrinho"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".pagamento.PagamentoPayPal"
            android:label="Pagar Compras"
            android:parentActivityName=".ListarProdutos" />
        <activity
            android:name=".ListarProdutos"
            android:label="Lista de Produtos"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".CadastrarProduto"
            android:label="Cadastro de Produtos"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".LoginActivity"
            android:label="@string/title_activity_login" />
        <activity
            android:name=".MainActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>