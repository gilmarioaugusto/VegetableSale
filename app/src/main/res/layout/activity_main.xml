<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#8186E99F"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/txtBemVindo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="O que deseja fazer?"
        android:textAlignment="center"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtBemVindo" />

    <ImageButton
        android:id="@+id/bt_cadastrar_produto"
        android:layout_width="@dimen/largura_botoes_menu"
        android:layout_height="@dimen/altura_botoes_menu"
        android:layout_marginTop="32dp"
        android:background="#00FFFFFF"
        android:scaleType="centerInside"
        app:layout_constraintEnd_toStartOf="@+id/bt_listar_produto"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        app:srcCompat="@drawable/bt_add_background" />

    <ImageButton
        android:id="@+id/bt_listar_produto"
        android:layout_width="@dimen/largura_botoes_menu"
        android:layout_height="@dimen/altura_botoes_menu"
        android:layout_marginTop="32dp"
        android:background="#00FFFFFF"
        android:scaleType="centerInside"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/bt_cadastrar_produto"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        app:srcCompat="@drawable/bt_search_background" />

    <ImageButton
        android:id="@+id/bt_logoff"
        android:layout_width="@dimen/largura_botoes_menu"
        android:layout_height="@dimen/altura_botoes_menu"
        android:layout_marginTop="24dp"
        android:background="#00FFFFFF"
        android:scaleType="centerInside"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/bt_carrinho"
        app:layout_constraintTop_toBottomOf="@+id/bt_listar_produto"
        app:srcCompat="@drawable/bt_exit_background" />

    <ImageButton
        android:id="@+id/bt_carrinho"
        android:layout_width="@dimen/largura_botoes_menu"
        android:layout_height="@dimen/altura_botoes_menu"
        android:layout_marginTop="24dp"
        android:background="#00FFFFFF"
        android:scaleType="centerInside"
        app:layout_constraintEnd_toStartOf="@+id/bt_logoff"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bt_cadastrar_produto"
        app:srcCompat="@drawable/bt_carrinho" />

</android.support.constraint.ConstraintLayout>